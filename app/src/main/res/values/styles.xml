<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorStrawberryPrimary</item>
        <item name="colorPrimaryDark">@color/colorStrawberryPrimaryDark</item>
        <item name="colorAccent">@color/colorStrawberryAccent</item>
        <item name="android:colorBackground">@color/colorStrawberryPrimaryDark</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorBlueberryPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlueberryPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBlueberryPrimaryDark</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorKiwiPrimary</item>
        <item name="colorPrimaryDark">@color/colorKiwiPrimaryDark</item>
        <item name="android:colorBackground">@color/colorKiwiPrimaryDark</item>
        <item name="windowNoTitle">true</item>    </style>

    <style name="YellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorHoneyPrimary</item>
        <item name="colorPrimaryDark">@color/colorHoneyPrimaryDark</item>
        <item name="android:colorBackground">@color/colorHoneyPrimaryDark</item>
        <item name="windowNoTitle">true</item>    </style>

    <style name="OrangeTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorClementinePrimary</item>
        <item name="colorPrimaryDark">@color/colorClementinePrimaryDark</item>
        <item name="android:colorBackground">@color/colorClementinePrimaryDark</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
